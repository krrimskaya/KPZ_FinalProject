@model List<ElectronicReminderApp.Models.Reminder>

<h2>Нагадування</h2>

<form method="post" asp-action="Add">
    <div>
        <label for="Title">Заголовок:</label>
        <input type="text" id="Title" name="Title" required />
    </div>
    <div>
        <label for="Description">Опис:</label>
        <input type="text" id="Description" name="Description" required />
    </div>
    <div>
        <label for="Date">Дата:</label>
        <input type="datetime-local" id="Date" name="Date" required />
    </div>
    <div>
        <label>Теги:</label><br/>
        <input type="checkbox" id="work" name="Tags" value="Робота" /> <label for="work">Робота</label>
        <input type="checkbox" id="study" name="Tags" value="Навчання" /> <label for="study">Навчання</label>
        <input type="checkbox" id="personal" name="Tags" value="Особисте" /> <label for="personal">Особисте</label>
        <input type="checkbox" id="health" name="Tags" value="Здоров'я" /> <label for="health">Здоров'я</label>
    </div>
    <button type="submit">Додати</button>
</form>

<h3>Список Нагадувань:</h3>
<ul>
    @foreach (var reminder in Model ?? new List<ElectronicReminderApp.Models.Reminder>())
    {
        <li>
            <strong>@reminder.Title</strong> - @reminder.Description - @reminder.Date.ToString("g")<br/>

            @if (!string.IsNullOrEmpty(reminder.Tags))
            {
                var tags = reminder.Tags.Split(',');
                foreach (var tag in tags)
                {
                    <span style="display:inline-block; background-color:#007bff; color:white; padding:2px 8px; border-radius:12px; margin-right:5px; font-size:0.9em;">
                        @tag
                    </span>
                }
            }

            <form method="get" asp-action="Edit" asp-route-id="@reminder.Id" style="display:inline;">
                <button type="submit">Редагувати</button>
            </form>
            <form method="post" asp-action="Delete" asp-route-id="@reminder.Id" style="display:inline;">
                <button type="submit">Видалити</button>
            </form>
        </li>
    }
</ul>
